              strokeColor: 'red',
              fillOpacity: 1,
              scale: 5
              };
            }
            var marker = new google.maps.Marker({
            position: snapChild.val().geolocation.location,//{lat: parseFloat(snapChild.val().lat), lng: parseFloat(snapChild.val().long)},
            icon : icon,
            map: map
            });
            markers.push(marker);
          });
        });  
